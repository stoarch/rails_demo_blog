<p id="notice"><%= notice %></p>

<p>
  <b>Created at:</b>
  <%= @post.created_at.strftime("%d-%m-%Y %H:%M") %>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>Author:</strong>
  <%= @post.author.full_name if @post.author%>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
