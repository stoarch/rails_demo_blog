<p id="notice"><%= notice %></p>

<p>
  <b>Created at:</b>
  <%= @post.created_at.strftime("%d-%m-%Y %H:%M") %>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @post.author.full_name if @post.author%>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<p>Comments:</p>
<% if user_signed_in? %>
  <%= link_to 'New Comment', new_post_comment_path(@post) %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Created at</th>
      <th>Author</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    <tr>
      <th>Content</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= @post.comments.each do |c| %>
      <tr>
        <td>c.created_at.strftime("%d-%m-%Y %H:%M")</td>
        <td>c.author.full_name</td>
        <% if user_signed_in? && current_user&.author.id == c.author.id %>
          <td> <%= link_to 'Edit', edit_post_comment_path(@post,c) %></td>
          <td> <%= link_to 'Destroy', [@post,c], confirm: 'Are you sure?', method: :delete %></td>
        <% end %>
      </tr>
      <tr>
        <td><%= c.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>

